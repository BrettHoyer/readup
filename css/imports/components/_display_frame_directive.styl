#preview-pane 
  position absolute 
  top 260px
  right 20px 
  height 300px
  width 95% 
  margin-right 0px 
  overflow scroll
  display none
  border-top 4px solid $co-grey
  img
    border-left 4px solid $co-grey
    border-right 4px solid $co-grey
  

  #close-preview
    font $sans-m
    position absolute 
    top 10px
    right 10px
    background black
    color white
    font-size 15px
    text-align center
    vertical-align middle
    line-height 20px
    width 20px
    height 20px
    &:hover
      cursor: pointer

.preview-logo
  color white
  margin-left 100px


@media screen-to-break-one
  #preview-pane 
    width 48%
    right 2%
    top 400px
    height 300px

@media screen-to-break-middle
  #preview-pane
    width 46%
    right 4%
    top 400px
    height 300px


@media screen-to-break-two
  #preview-pane
    width 28%
    right 2%
    top 250px
    height 420px



